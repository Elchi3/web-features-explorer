<div id="{{ feature.id }}" class="feature baseline-{{ feature.status.baseline }}">
  <div class="header">
    <h1>{{ feature.name }}</h1>
    {% include "baseline.njk" %}
  </div>
  {% include "tags.njk" %}

  <p>
    {{ feature.description_html | safe }}
    {% if feature.mdnUrls.length > 0 %}
      To learn more, see
      {% for url in feature.mdnUrls %}
        <a href="{{ url.url }}">{{ url.title }}</a>{% if loop.last %} at MDN.{% else %}, {% endif %}
      {% endfor %}
    {% endif %}
  </p>
  
  <h3>Compatibility{% if feature.caniuse %} <span class="subtext">(<a href="https://caniuse.com/{{ feature.caniuse }}">view on caniuse.com</a>)</span>{% endif %}</h3>
  {% include "compat.njk" %}

  {%- if feature.blockedOn %}
    <p>Baseline availability blocked since {{ feature.blockedSince }} by {{ feature.blockedOn }} ({{ feature.monthsBlocked }} months)</p>
  {%- endif %}

  {% include "specs.njk" %}

  <a class="edit-link" href="https://github.com/web-platform-dx/web-features/edit/main/features/{{ feature.id }}.yml">Edit this feature</a>
</div>